{
  "name": "marks",
  "version": "0.1.0",
  "description": "Bookmarks app with Cloudflare Workers",
  "license": "MIT",
  "main": "dist/worker.js",
  "scripts": {
    "build": "run-p build:*",
    "build:server": "esbuild --bundle --sourcemap --minify --outfile=dist/worker.js ./src/server/index.ts",
    "build:client": "esbuild --bundle --sourcemap --minify --outfile=public/static/dist/app.js src/client/index.tsx",
    "dev": "miniflare --live-reload --debug --env .env",
    "publish": "wrangler publish dist/index.js"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@types/dom-parser": "^0.1.1",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "esbuild": "^0.14.24",
    "miniflare": "^2.14.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^2.2.16",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "bootstrap": "5.1.3",
    "crypto": "^1.0.1",
    "dom-parser": "^0.1.6",
    "hono": "^4.0.3",
    "html-entities": "^2.3.2",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-bootstrap": "^2.1.2",
    "react-dom": "^17.0.2",
    "sodium-plus": "^0.9.0",
    "worker-gist": "^0.1.3"
  }
}
